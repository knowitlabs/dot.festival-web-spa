.dot.session-dialog[open]
  position fixed
  top 50%
  left 50%
  margin 0
  padding 2rem 2rem
  border-radius 0
  border 2pt solid currentColor
  width 100%
  z-index 900
  max-width 50vw
  min-height 400px
  max-height 70vh
  overflow scroll
  transform translate(-50%,-50%)
  color var(--dot-color-whiteShoulders)
  background-color black
  display flex
  flex-direction column
  grid-gap 1rem 1rem
  @media screen and (min-width: 1200px)
    grid-gap 2rem 2rem

.dot.session-dialog[open]
  & .dot.session-dialog-content
    white-space pre-line


