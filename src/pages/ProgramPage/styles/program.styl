    flex-direction column
    position sticky
    top 6rem
    @media screen and (min-width: 1200px)
      padding 1rem 1.5rem
      grid-gap 2rem 2rem

.dot.program
  & .dot.session-content
    & .dot.session-description
      font-size 1.5rem
      line-height 150%
      margin-bottom 1rem
    & > *
      margin-bottom 0


.dot.speaker-name
  font-size 12px
  line-height 120%
  @media screen and (min-width: 1200px)
    font-size 14px
