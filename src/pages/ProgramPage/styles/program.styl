.dot.track-slot
  font-size 1.25rem
  line-height 120%
  font-weight 600
  position sticky
  top 0
  background-color var(--dot-color-black)
  z-index 20
  display none
  font-size 18px
  @media screen and (min-width: 1024px)
    line-height 120%
    font-weight 600
    margin-right -1rem
    padding 1rem
    padding-left 0
    height 6rem
    display flex
    justify-content flex-start
    align-items flex-end
  @media screen and (min-width: 1200px)
    font-size 1.25rem
    margin-right -2rem
    padding 2rem
    padding-left 0
  @media screen and (min-width: 1440px)
    font-size 28px
  @media screen and (min-width: 1920px)
    font-size 38px

.dot.track-slot[class*="track-"]::after
  content ""
  position absolute
  top calc(100% - 1rem)
  width auto
  left 0
  right 1rem
  height 1rem
  @media screen and (min-width: 1200px)
    right 2rem

.dot.track-slot
  &.track-1
    &::after
      background-color red
  &.track-2
    &::after
      background-color green
  &.track-3
    &::after
      background-color blue
  &.track-4
    &::after
      background-color white
  &.track-5
    &::after
      background-color white
  &.track-6
    &::after
      background-color white

.dot.lane-slot
  position sticky
  top 1rem
  display none
  @media screen and (min-width: 1024px)
    display block
  &.track-1
    &::after
      background-image radial-gradient(circle at 1px 1px, red 1px, transparent 0)
  &.track-2
    &::after
      background-image radial-gradient(circle at 1px 1px, green 1px, transparent 0)
  &.track-3
    &::after
      background-image radial-gradient(circle at 1px 1px, blue 1px, transparent 0)
  &.track-4
    &::after
      background-image radial-gradient(circle at 1px 1px, white 1px, transparent 0)
  &.track-5
    &::after
      background-image radial-gradient(circle at 1px 1px, white 1px, transparent 0)
  &.track-6
    &::after
      background-image radial-gradient(circle at 1px 1px, white 1px, transparent 0)


.dot.time-slot
  font-size 38px
  line-height 50px
  font-weight 600
  display none
  @media screen and (min-width: 1024px)
    grid-column times
    display block
    font-size 24px
    line-height 120%
  @media screen and (min-width: 1440px)
    font-size 38px
    line-height 50px


.dot.session
  border 1px solid currentColor
  color var(--dot-color-whiteShoulders)
  background-color black
  position relative
  width 100%
  @media screen and (min-width: 1024px)
    min-width 10rem
    border 1pt solid currentColor
  @media screen and (min-width: 1440px)
    min-width 16rem
  @media screen and (min-width: 1920px)
    min-width 20rem
  @media screen and (min-width: 2560px)
    min-width 24rem

  &.is-workshop
    z-index 10

.dot.session.is-keynote
  border 1px solid currentColor
  color var(--dot-color-whiteShoulders)
  background-color black

.dot.track-all
  display flex
  justify-content center
  align-items center
  background #ccc
  color #000
  box-shadow none

.dot.meta
  color #555
  display flex
  flex-direction column
  justify-content flex-start
  align-items flex-start
  z-index 10

.dot.duration
  display block
  font-size 12px
  line-height 120%
  @media screen and (min-width: 1200px)
    font-size 14px
  @media screen and (min-width: 1440px)
    font-size 1rem
  @media screen and (min-width: 1920px)
    font-size 1.25rem
  @media screen and (min-width: 2560px)
    font-size 1.5rem

.dot.session-title
  margin 0
  display block
  font-size 18px
  @media screen and (min-width: 1440px)
    font-size 28px
  @media screen and (min-width: 1920px)
    font-size 38px


.dot.program .dot.speakers
  display flex
  flex-direction column
  grid-gap 0.5rem 0.5rem

  & .dot.speaker
    display flex
    justify-content flex-start
    align-items center
    grid-gap 0.5rem 0.5rem
    @media screen and (min-width: 1200px)
      grid-gap 1rem 1rem


.dot.speaker-avatar
  border-radius 50%
  overflow hidden
  background-position center center
  background-size cover
  background-repeat no-repeat
  filter grayscale(1)
  flex-shrink 0
  flex-grow 0
  height 2rem
  width 2rem
  aspect-ratio: 1/1
  @media screen and (min-width: 1200px)
    height 3rem
    width 3rem

.dot.lane-slot[class*="track-"]::after
  display block
  height calc(100vh - 400px)
  left 0
  right 0
  top 100%
  bottom auto
  z-index 0
  width auto
  margin-left 0
  margin-right 0
  position absolute
  background-size 10px 10px
  background-position -1rem -1rem
  overflow hidden
  content none
  @media screen and (min-width: 1024px)
    content ""



