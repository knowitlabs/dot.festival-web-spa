.dot.button,
a.dot.button
  text-decoration none
  border none
  border 0.125rem solid transparent
  min-width 3rem
  height 3rem
  width 100%
  max-width 24ch
  flex-grow 0
  flex-shrink 0
  border-radius 3rem
  display flex
  align-items center
  justify-content center
  background-color var(--dot-color-black)
  color var(--dot-color-whiteShoulders)
  font-family var(--dot-font-family-default)
  font-size 1rem
  line-height 140%
  font-weight 600
  padding 1.5rem 2rem


.dot.button
  &:hover
    background-color var(--dot-color-magenta)
    color var(--dot-color-black)
    border-color currentColor

.dot.button
  &.primary
    background-color var(--dot-color-whiteShoulders)
    color var(--dot-color-black)

.dot.button
  &.primary
    &:hover
      background-color var(--dot-color-black)
      color var(--dot-color-whiteShoulders)
      border-color currentColor



.dot.button
  & .dot.icon
    margin-left 1rem

.dot.button
  &:hover
    & .dot.icon
      & svg
        fill white
        stroke-width 2
