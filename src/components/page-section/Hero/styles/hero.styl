.dot.hero
  position relative
  display grid
  grid-template-areas "hero-image"\
                      "hero-title"\
                      "hero-lead"\
                      "hero-actions"
  @media screen and (min-width: 1024px)
    grid-template-areas "hero-title hero-image"\
                        "hero-title hero-image"\
                        "hero-lead hero-image"\
                        "hero-actions ."


.dot.hero
  & .dot.image
    grid-area hero-image
    object-fit contain
    max-height 25vh
    max-width 100%
    margin-bottom 4rem
    @media screen and (min-width: 640px)
      max-height 40vh


    // @media screen and (min-width: 640px)

.dot.hero
  & h1.dot
    grid-area hero-title
    margin-bottom 2rem
    max-width 600px
    font-size 1.75rem
    text-align left
    margin-top auto
    @media screen and (min-width: 640px)
      font-size 2rem
    @media screen and (min-width: 1024px)
      text-align left
      margin-right auto
      font-size 2.75rem
      margin-bottom 3.5rem
    @media screen and (min-width: 1440px)
      font-size 3rem

.dot.hero
  & p.dot.lead
    grid-area hero-lead
    margin-bottom 2rem
    max-width 600px
    font-size 1.125rem
    text-align left
    @media screen and (min-width: 640px)
      font-size 1.25rem
      margin-bottom 2rem
    @media screen and (min-width: 1024px)
      text-align left
      margin-right auto
      font-size 1.5rem
      margin-bottom 2rem
    @media screen and (min-width: 1440px)
      font-size 1.5rem
      margin-bottom 3rem


.dot.hero
  & .dot.actions
    grid-area hero-actions
    display flex
    align-items flex-start
    justify-content flex-start
