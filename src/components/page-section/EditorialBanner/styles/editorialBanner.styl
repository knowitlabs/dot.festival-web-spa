.dot.editorial-banner
  position relative
  display flex
  flex-direction column
  grid-gap 2rem
  background-color var(--dot-color-box-background)
  color var(--dot-color-black)
  overflow hidden
  box-shadow 0 16px 24px 2px rgba(0,0,0,0.14), 0 6px 30px 5px rgba(0,0,0,0.12), 0 8px 10px -5px rgba(0,0,0,0.2)
  @media screen and (min-width: 1024px)
    display grid
    grid-template-columns 1fr 2fr
    grid-gap 3rem

.dot.editorial-banner
  & .dot.responsive-image
    position relative
    max-height 50vh


.dot.editorial-banner
  & .dot.responsive-image
    & .dot.image
      object-fit cover
      width 100%


.dot.editorial-banner

  & .dot.content
    position relative
    padding 0 2rem 3rem 2rem
    @media screen and (min-width: 1024px)
      padding 3rem 2rem 3rem 0
  & .dot.content,
  & .dot.content *
    font-size 1.125rem
    line-height 130%
    font-weight normal
    @media screen and (min-width: 640px)
      font-size 1.5rem
    @media screen and (min-width: 1024px)
      font-size 1.75rem
    @media screen and (min-width: 1440px)
      font-size 2.125rem
  & .dot.content :not(:last-child):not(.icon)
    margin-bottom 1.5rem
  & .dot.content :last-child
    margin-bottom 0


.dot.editorial-banner

  & .dot.content
    & a
      position static

    & a::after
      content none

    & a::before
      content ""
      display block
      position absolute
      top 0
      right 0
      left 0
      bottom 0
      z-index 1


.dot.editorial-banner
  & .dot.icon
    position absolute
    margin 0
    right 3rem
    bottom 2rem
    display block
    height 3rem
    width 3rem

.dot.editorial-banner
  & .dot.icon
    & > svg
      height 3rem
      width 3rem


.dot.editorial-banner
  & .dot.title
    font-weight bold
    font-size 2.125rem
    line-height 2.75rem
    margin-bottom 1rem