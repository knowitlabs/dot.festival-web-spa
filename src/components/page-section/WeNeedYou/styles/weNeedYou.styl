section.dot.section.we-need-you
  position relative
  background-color var(--dot-color-white)
  padding-top 4rem !important
  padding-bottom 6rem
  & .dot.container
    @media screen and (min-width: 640px)
      display grid
      grid-template-columns 1fr 70%
      grid-template-areas: ". content"

  & .dot.content
    grid-area content
    display flex
    flex-direction column
    justify-content flex-start
    align-items flex-start

  & h2.dot
    color #000
    text-align right
    font-family Radial
    font-size 48px
    font-style normal
    font-weight 600
    line-height 130%  /* 62.4px */
    margin-bottom 4rem
    max-width 22ch
    margin-left auto

  & p.dot
    color #000
    font-family Radial
    font-size 34px
    font-style normal
    font-weight 400
    line-height 130% /* 44.2px */
    margin-bottom 4rem
