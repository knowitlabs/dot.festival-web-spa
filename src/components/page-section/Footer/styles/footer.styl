.dot.footer
  flex-grow 0
  position relative
  padding-bottom 4rem
  & .dot.container
    height 100%
    position relative


.dot.footer
  & .dot.logo
    display block
    color var(--dot-color-whiteShoulders)
    & svg
      height 1.5rem
      @media screen and (min-width: 640px)
        height 2rem
      @media screen and (min-width: 1024px)
        height 3rem