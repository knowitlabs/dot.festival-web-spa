.dot.footer
  flex-grow 1
  position relative
  padding-bottom 4rem
  & .dot.container
    height 100%
    position relative
    color var(--dot-color-black)
    background-color var(--dot-color-whiteShoulders)
    padding 2rem 3rem
    @media screen and (min-width: 640px)
      padding 2.5rem 5rem
    @media screen and (min-width: 1024px)
      padding 5rem 10rem


.dot.footer
  & .dot.logo
    display block
    & svg
      height 1.5rem
      @media screen and (min-width: 640px)
        height 2rem
      @media screen and (min-width: 1024px)
        height 3rem